<%-include ('../../partials/header.ejs') %> 
<body>
    <%-include ('../../partials/homenavbar.ejs') %>

    <div class="container">
        <hr>
        <% titles.forEach(title => { %>
            
            <div class="card mb-5">
                <div class="card-header">
                    <h2>Quest√£o ...</h2>
                </div>

                <div class="card-body">
                    <input class="form-control" type="text" value="<%= title.bodyTitle%>" aria-label="readonly input example" readonly>
                    <br>

                    <form action="" method="post">

                        <% options.forEach(option => { %>

                            <% if(option.TitlesQuestionIdTitle == title.idTitle) { %>

                                <div class="mb-3">

                                    <div class="input-group mb-3">

                                        <div class="input-group">
                                            <div class="input-group-text">
                                            <input class="form-check-input mt-0" name="rightOption" type="radio" value="0" aria-label="Radio button for following text input" required>
                                            </div>
                                            <input type="text" name="option1" class="form-control" aria-label="Text input with radio button" value="<%= option.bodyOption %>">
                                        </div>
                                </div>
                                
                            <% } %>
                        <% }) %>

                    </form>

                        

                </div>

            </div>
        <% }) %>

    </div>
</body>
</html>